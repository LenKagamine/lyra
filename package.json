{
  "name": "lyra",
  "version": "1.0.0",
  "description": "A music player app",
  "main": "src/main/index.jsx",
  "scripts": {
    "electron": "electron-webpack dev",
    "electron:build": "electron-webpack",
    "electron:dist": "electron-builder --dir",
    "electron:pack": "electron-builder",
    "browser": "webpack-dev-server --config ./webpack.browser.config.js",
    "browser:build": "webpack -p --progress --config ./webpack.browser.config.js",
    "browser:serve": "http-server -c-1 ./dist/browser",
    "neutrino": "neutrino-webpack -m ./webpack.neutrino.config.js -r ./webpack.neutrino-renderer.config.js",
    "neutrino:build": "neutrino-webpack -p -m ./webpack.neutrino.config.js -r ./webpack.neutrino-renderer.config.js",
    "neutrino:dist": "neutrino-builder -m ./dist/neutrino -r ./dist/neutrino-renderer",
    "postinstall": "node install-app-deps",
    "test": "flow check"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LenKagamine/lyra.git"
  },
  "author": "Michael Kim <micklepickle98@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.0.17",
    "dbus": "^1.0.5",
    "electron-json-storage": "^4.4.0",
    "fluent-ffmpeg": "^2.1.2",
    "googleapis": "^68.0.0",
    "neutrinojs": "file:../neutrino",
    "source-map-support": "^0.5.11",
    "updeep": "^1.2.0",
    "ytdl-core": "^4.5.0",
    "ytsr": "^3.3.1"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.4.4",
    "@babel/plugin-proposal-optional-chaining": "^7.6.0",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "dotenv": "^8.0.0",
    "electron": "^10.0.0",
    "electron-builder": "^22.10.5",
    "electron-devtools-installer": "^3.1.1",
    "electron-webpack": "^2.8.2",
    "electron-webpack-eslint": "^6.0.0",
    "eslint-plugin-flowtype": "^3.11.1",
    "eslint-plugin-react": "^7.14.2",
    "eslint-plugin-react-hooks": "^2.3.0",
    "flow-bin": "^0.147.0",
    "he": "^1.2.0",
    "html-webpack-plugin": "^3.2.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-redux": "^7.1.0",
    "redux": "^4.0.1",
    "sass": "^1.32.8",
    "sass-loader": "^7.1.0",
    "webpack": "^4.44.1",
    "webpack-dev-server": "^3.11.0"
  },
  "electronWebpack": {
    "main": {
      "webpackConfig": "webpack.main.config.js"
    },
    "renderer": {
      "webpackConfig": "webpack.renderer.config.js"
    }
  },
  "build": {
    "productName": "Lyra Music Player",
    "appId": "com.music-player",
    "win": {
      "target": "portable"
    },
    "linux": {
      "category": "Audio;AudioVideo",
      "artifactName": "Lyra-Music-Player-${version}.${ext}"
    },
    "appImage": {
      "systemIntegration": "doNotAsk"
    },
    "npmRebuild": false,
    "files": [
      "!node_modules/@ffmpeg-installer",
      {
        "from": "node_modules/@ffmpeg-installer",
        "to": "node_modules/@ffmpeg-installer",
        "filter": [
          "ffmpeg",
          "${platform}-${arch}"
        ]
      }
    ]
  },
  "optionalDependencies": {
    "dbus": "^1.0.5",
    "neutrinojs": "file:../neutrino"
  }
}
