{
  "name": "lyra",
  "version": "1.0.0",
  "description": "A music player app",
  "main": "dist/main/main.js",
  "scripts": {
    "electron": "electron-webpack dev",
    "electron:build": "webpack --mode production --config webpack.main.config.js",
    "electron:dist": "electron-builder --dir",
    "electron:pack": "electron-builder",
    "browser": "webpack serve --mode development --config ./webpack.browser.config.js",
    "browser:build": "webpack --mode production --config ./webpack.browser.config.js",
    "browser:serve": "http-server -c-1 ./dist/browser",
    "neutrino": "neutrino-webpack -m ./webpack.neutrino.config.js -r ./webpack.neutrino-renderer.config.js",
    "neutrino:build": "neutrino-webpack -p -m ./webpack.neutrino.config.js -r ./webpack.neutrino-renderer.config.js",
    "neutrino:dist": "neutrino-builder -m ./dist/neutrino -r ./dist/neutrino-renderer",
    "postinstall": "node install-app-deps",
    "test": "flow check"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LenKagamine/lyra.git"
  },
  "author": "Michael Kim <micklepickle98@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.0.20",
    "dbus": "^1.0.5",
    "fluent-ffmpeg": "^2.1.2",
    "neutrinojs": "file:../neutrino"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/preset-env": "^7.13.12",
    "@babel/preset-flow": "^7.13.13",
    "@babel/preset-react": "^7.13.13",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^5.2.0",
    "dotenv": "^8.0.0",
    "electron": "^10.0.0",
    "electron-builder": "^22.10.5",
    "electron-devtools-installer": "^3.1.1",
    "electron-json-storage": "^4.4.0",
    "eslint": "^7.23.0",
    "eslint-plugin-flowtype": "^5.4.0",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-webpack-plugin": "^2.5.3",
    "flow-bin": "^0.147.0",
    "googleapis": "^68.0.0",
    "he": "^1.2.0",
    "html-webpack-plugin": "^5.3.1",
    "mini-css-extract-plugin": "^1.4.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.3",
    "redux": "^4.0.5",
    "sass": "^1.32.8",
    "sass-loader": "^11.0.1",
    "style-loader": "^2.0.0",
    "updeep": "^1.2.0",
    "webpack": "^5.28.0",
    "webpack-cli": "^4.6.0",
    "webpack-dev-server": "^3.11.2",
    "ytdl-core": "^4.5.0",
    "ytsr": "^3.3.1"
  },
  "build": {
    "productName": "Lyra Music Player",
    "appId": "com.music-player",
    "win": {
      "target": "portable"
    },
    "linux": {
      "category": "Audio;AudioVideo",
      "artifactName": "Lyra-Music-Player-${version}.${ext}"
    },
    "npmRebuild": false,
    "files": [
      "!node_modules/@ffmpeg-installer",
      {
        "from": "node_modules/@ffmpeg-installer",
        "to": "node_modules/@ffmpeg-installer",
        "filter": [
          "ffmpeg",
          "${platform}-${arch}"
        ]
      }
    ]
  },
  "optionalDependencies": {
    "dbus": "^1.0.5",
    "neutrinojs": "file:../neutrino"
  }
}
