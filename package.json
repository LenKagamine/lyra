{
  "name": "lyra",
  "version": "1.0.0",
  "description": "A music player app",
  "main": "src/main/index.js",
  "scripts": {
    "dev": "electron-webpack dev",
    "build": "electron-webpack",
    "dist": "electron-webpack && electron-builder --dir",
    "pack": "electron-webpack && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LenKagamine/lyra.git"
  },
  "author": "Michael Kim <micklepickle98@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.0.17",
    "electron-json-storage": "^4.1.6",
    "fluent-ffmpeg": "^2.1.2",
    "googleapis": "^40.0.0",
    "music-metadata": "^3.5.3",
    "node-id3": "^0.1.7",
    "source-map-support": "^0.5.11",
    "ytdl-core": "^0.29.2"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "dotenv": "^8.0.0",
    "electron": "^5.0.6",
    "electron-builder": "^20.44.4",
    "electron-webpack": "^2.7.2",
    "flow-bin": "^0.102.0",
    "he": "^1.2.0",
    "node-sass": "^4.12.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-player": "^1.11.1",
    "react-redux": "^7.1.0",
    "redux": "^4.0.1",
    "sass-loader": "^7.1.0",
    "webpack": "^4.35.0"
  },
  "build": {
    "productName": "Lyra Music Player",
    "appId": "com.music-player",
    "win": {
      "target": "portable"
    },
    "linux": {
      "category": "Audio;AudioVideo",
      "artifactName": "Lyra-Music-Player-${version}.${ext}"
    },
    "appImage": {
      "systemIntegration": "doNotAsk"
    }
  },
  "optionalDependencies": {
    "dbus": "^1.0.5"
  }
}
